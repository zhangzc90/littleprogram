.box{
  background: #FAFAFA;
  margin: 30rpx;
  border: 10rpx solid #ffffff;
  padding: 20rpx;
}
.base{
  display: flex;
}
.b-left{
  flex: 1;
}
.name{
  padding-bottom: 10rpx;
}
.name label{
  font-size: 40rpx;
}
.headimg{
  width: 100rpx;
  height: 100rpx;
}
.headimg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5px;
}

.detail{
  padding-top: 50rpx;
}
.detail .ditem{
  padding: 10rpx 0;
}

.detail .ditem image{
  width: 28rpx;
  height: 28rpx;
  padding-right: 30rpx;
}

.other{
  background: #ffffff;
  padding: 20rpx 30rpx;
}

.other .item{
  padding: 20rpx 5rpx;
}
.other .item:not(:last-child){
  border-bottom: 1rpx solid #f3f3f3;
}
.other .item label{
  font-size: 30rpx;
}
.other .item text{
  padding-left: 50rpx;
}

.map{
  padding: 20rpx;
  background: #ffffff;
  margin-top: 20rpx;
}
.map map{
  width:100%;
  height: 400rpx;
  margin-top: 15rpx;
}

.map label{
  font-size: 30rpx;
  padding-left: 10rpx;
}
.intro{
  padding: 20rpx;
}
.intro text{
  line-height: 1.5;
}
.logos{
  padding-top: 20rpx;
  text-align: center;
}
.logos image{
  width: 130rpx;
  height: 130rpx;
  padding: 15rpx;
}